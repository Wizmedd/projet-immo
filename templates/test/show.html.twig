{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Heat</th>
                <td>{{ product.heat }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ product.address }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ product.zipcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ product.city }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ product.surface }}</td>
            </tr>
            <tr>
                <th>Rooms</th>
                <td>{{ product.rooms }}</td>
            </tr>
            <tr>
                <th>Bedrooms</th>
                <td>{{ product.bedrooms }}</td>
            </tr>
            <tr>
                <th>Floor</th>
                <td>{{ product.floor }}</td>
            </tr>
            <tr>
                <th>Sold</th>
                <td>{{ product.sold ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_test_index') }}">back to list</a>

    <a href="{{ path('app_test_edit', {'id': product.id}) }}">edit</a>

    {{ include('test/_delete_form.html.twig') }}
{% endblock %}
